#include <stdio.h>
int main() {
    int x, y, c, a;
    printf("Enter total number of chocolates he wants to gift : ");
    scanf("%d", &c);

    printf("Enter the number of chocolates he has : ");
    scanf("%d", &x);

    printf("The cost of 1 chocolate (in rupees) : ");
    scanf("%d", &y);
    a = (c - x)*y;
    printf("The minimum money Chef need to spend is %d rupees", a);
    return 0;
}
