//  beginner
#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,x,y,i,output;
	cin>>t;
	for(i=0;i<t;i++)
	{
	    cin>>x>>y;
	    if(y>x)
	    {
	        output=x+(2*(y-x));
	    }
	    else if(x>y)
	    {
	        output=y;
	    }
	    else
	    {
	        output=x;
	    }
cout<<output<<endl;	}
	
	return 0;
}

////////////////////////////////////////////////////////

// intermidate
#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,l,v1,v2,i,x,y;
	cin>>t;
	for(i=0;i<t;i++)
	{
	    cin>>l>>v1>>v2;
	    x=(l+v1-1)/v1;
	    y=(l+v2-1)/v2;
	    if( x==y )
	    {
	        cout<<"-1\n";
	    }
	    else
	    {
	        cout<<x-y-1<<endl;
	    }
	}
	return 0;
